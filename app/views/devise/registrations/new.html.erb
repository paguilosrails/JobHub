<div class="container">
  <div class="row">
      <div class="col-3">
      </div>
      <div class="col">
        <h2>Registrarse</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :contraseÃ±a %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :confirma_contraseÃ±a %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.label :nombre %><br />
            <%= f.text_field :name, autocomplete: "nombre", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, autocomplete: "username", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :cargo_actual %><br />
            <%= f.text_field :current_role, autocomplete: "Cargo actual", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :skill %><br />
            <%= f.text_field :username, autocomplete: "username", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :escolaridad %><br />
            <%= f.text_field :schooling, autocomplete: "escolaridad", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :experiencia%><br />
            <%= f.text_field :experience, autocomplete: "experiencia", class: 'form-control' %>
          </div>

          <div class="form-group">  
            <%= f.hidden_field :role, class: 'form-control' %>    
          </div>

          <div class="container">    
              <div class="form-group">
                <%= f.label :image, "Agrega tu imagen de perfil" %>
                <%= f.file_field :image, accept: 'image/*', required: true, class: 'form-control' %>
              </div>      
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      <div class="col">
      </div>
    </div>
</div> 
